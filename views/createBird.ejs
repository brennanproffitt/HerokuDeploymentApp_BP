<!DOCTYPE html>
<html>
    <%- include('./partials/header', {title: 'Create Bird'}); %>
    <body>
        <div class="container">
            <h1>Create Bird</h1>
            <form method="POST" action="/birds/create">
                    <div class="form-group col-4">
                      <label for="Species">Species:</label>
                      <input type="text" class="form-control" id="Species" placeholder="Species" name="species" required>
                    </div>
                    <div class="form-group col-4">
                      <label for="Nickname">Nickname:</label>
                      <input type="text" class="form-control" id="Nickname" placeholder="Nickname" name="nickname" required>
                    </div>
                    <div class="form-group col-4">
                        <label for="Status">Status:</label>
                        <input type="text" class="form-control" id="Status" placeholder="Status" name="status" required>
                      </div>

                    <input class="btn btn-primary" type="submit" value="Create Bird"/>
            </form>
        </div>

        <% include ./partials/scripts %>
    </body>
</html>